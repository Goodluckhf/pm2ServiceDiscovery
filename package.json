{
  "name": "Pm2PrometheusConfGenerator",
  "version": "1.0.0",
  "description": "Listen pm2 events and generate conf file for prometheus",
  "main": "index.js",
  "scripts": {
    "test": "mocha --ui bdd --reporter spec --require babel-register ./test/*.test.js ./test/**/*.test.js",
    "test:coverage:dev": "nyc --reporter=text --require babel-register mocha --ui bdd --reporter spec --require babel-register ./test/*.test.js ./test/**/*.test.js",
    "test:coverage": "nyc --reporter=lcov --require babel-register mocha --ui bdd --reporter spec --require babel-register ./test/*.test.js ./test/**/*.test.js",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore test.js",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-stdout-stream": "^1.2.1",
    "pm2": "3.0.0"
  },
  "devDependencies": {
    "nyc": "^12.0.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "semantic-release": "^15.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Goodluckhf/Pm2PrometheusConfGenerator.git"
  },
  "apps": [
    {
      "merge_logs": true,
      "max_memory_restart": "200M",
      "script": "app.js"
    }
  ],
  "author": "Goodluckhf <Goodluckhf@yandex.ru>",
  "license": "MIT",
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-multi-spaces": 0,
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": 0,
      "key-spacing": [
        "error",
        {
          "align": {
            "beforeColon": false,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "spaced-comment": 0,
      "no-trailing-spaces": 0,
      "arrow-body-style": [
        1,
        "as-needed"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage",
          "loose": true
        }
      ]
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        }
      ]
    }
  }
}
